@model SalesWebMVC.Models.ViewModels.PedidosFormViewModel

@{ ViewData["Title"] = "Novo Pedido"; }

<h2>@ViewData["Title"]</h2>

<h4>Pedidos</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class=" = " form-group">
                <label asp-for="pedidos.Status" class="control-label"></label>
                <input asp-for="pedidos.Status" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="pedidos.ClienteId" class="control-label"></label>
                <select asp-for="pedidos.ClienteId" asp-items="@(new SelectList(Model.Clientes,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="pedidos.ProdutoId" class="control-label"></label>
                <select asp-for="pedidos.ProdutoId" asp-items="@(new SelectList(Model.Produtos,"Id","Descricao"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}