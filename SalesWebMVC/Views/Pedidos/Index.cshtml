@model IEnumerable<SalesWebMVC.Models.Pedido>

@{ 
    ViewData["Title"] = "Pedidos";    
}


<h2>@ViewData["Title"]</h2>


<p>
    <a asp-action="Create" class="btn btn-default">Adicionar Pedido</a>
</p>

<table class="table table-striped  table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.ProdutoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
        </tr>
    </thead>

<tbody>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProdutoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClienteId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
    
    }
</tbody>

</table>